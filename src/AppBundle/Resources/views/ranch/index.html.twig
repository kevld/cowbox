{% extends 'base.html.twig' %}

{% block titre %}
    Ranchs
{% endblock %}    

{% block css %}
    <link href="{{ asset('bundles/app/vendors/bootstrap-fileinput-master/css/fileinput.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span class="fs1" aria-hidden="true" ></span> Gestion des ranchs
                    </div>
                </div>
                <div class="card-body">
                    <button id="add-ranch" class="btn btn-primary">Ajouter un ranch</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body" id="form_ranchs" style="display: none;">
                    <input id="ranch_id" type="file" class="file-loading" multiple="multiple" name="ranchs_ids[]">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="tab">

            </div>
        </div>
    </div>
    <div class="modal fade" id="modal" data-backdrop="static" data-keyboard="false"></div>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="{{ asset('bundles/app/vendors/bootstrap-fileinput-master/js/fileinput.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/vendors/bootstrap-fileinput-master/js/fileinput_locale_fr.js') }}"></script>
    <script src="{{ asset('bundles/app/js/ranch.js') }}"></script>
{% endblock %}
