<table class="table table-condensed table-striped table-hover table-bordered pull-left dataTable" id="data-table" aria-describedby="data-table_info">
    <thead>
    <tr role="row">
        <th>
            Id
        </th>
        <th class="text-center">
            Nom
        </th>
        <th class="text-center">
            Importer une liste d'élèves
        </th>
        <th class="text-center">
            Gérer les élèves de cette classe
        </th>
        <th class="text-center">
            Supprimer
        </th>
    </tr>
    </thead>

    <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="gradeC odd">
        {% for classe in classes %}
            <tr class="gradeU odd" data-id="{{ classe.id }}">
                <td class="edit">{{ classe.id }}</td>
                <td class="edit">{{ classe.nom }}</td>
                <td class="text-center">
                    <a href="#" class="import"><i class="fa fa-upload text-primary"></i></a>
                </td>
                <td class="text-center">
                    <a href="#" class="classe"><i class="fa fa-users text-primary"></i></a>
                </td>
                <td class="text-center">
                    <a href="#" data-id="{{ classe.id }}" class="suppr"><i class="glyphicon glyphicon-remove text-danger"></i></a>
                </td>
            </tr>
        {% else %}
            <tr class="text-center">
                <td colspan="6">Pas de classe créee</td>
            </tr>
        {% endfor %}
    </tbody>
</table>