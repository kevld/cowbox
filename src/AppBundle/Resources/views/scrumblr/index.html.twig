{% extends 'base.html.twig' %}

{% block titre %}
    Scrumblr
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-md-6">
                        Sélectionnez un scrumblr existant
                        <div class="input-group form-group" style="width: 100%;">
                            <select id="select-scrumblrs" class="form-control" >
                                <option value="-1"> ----- </option>
                                {% for ranch in user.ranchs %}
                                    {% for scrumblr in ranch.scrumblrs %}
                                        <option value="{{ scrumblr.nom }}">{{ scrumblr.nom }}</option>
                                    {% endfor %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        Ou créez un nouveau scrumblr
                        <div class="input-group form-group">
                            <div class="dtp-container dropdown fg-line">
                                <input type="text" class="form-control" id="input-name" />
                            </div>
                            <span id="addScrumblr" class="input-group-addon" style="cursor:pointer"><i class="glyphicon glyphicon-plus"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <iframe id="iframe" src="http://127.0.0.1:8000" width="100%" height="700px" style="display: none;"></iframe>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('bundles/app/js/scrumblr.js') }}"></script>
{% endblock %}
